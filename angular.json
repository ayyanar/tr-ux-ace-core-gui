{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "cache": {
      "enabled": false
    }
  },
  "newProjectRoot": "src",
  "projects": {
    "demo-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "src",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/demo-app",
            "index": "src/demo-app/index.html",
            "main": "src/demo-app/main.ts",
            "polyfills": "src/demo-app/polyfills.ts",
            "tsConfig": "src/demo-app/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "stylePreprocessorOptions": {
              "includePaths": ["styles",  "dist"]
            },
            "assets": [
              "src/demo-app/favicon.ico",
              "src/assets"
            ],
            "styles": [         
              "src/styles/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "6mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/demo-app/environments/environment.ts",
                  "with": "src/demo-app/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "demo-app:build:production"
            },
            "development": {
              "browserTarget": "demo-app:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "demo-app:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/demo-app/test.ts",
            "polyfills": "src/demo-app/polyfills.ts",
            "tsConfig": "src/demo-app/tsconfig.spec.json",
            "karmaConfig": "src/demo-app/karma.conf.js",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/demo-app/favicon.ico"
            ],
            "styles": [
              "./node_modules/@angular/material/prebuilt-themes/indigo-pink.css",
              "src/demo-app/styles.scss"
            ],
            "scripts": []
          }
        }
      }
    },
    "core-lib": {
      "projectType": "library",
      "root": "src",
      "sourceRoot": "src/lib",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "src/lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "src/lib/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "src/lib/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/lib/test.ts",
            "tsConfig": "src/lib/tsconfig.spec.json",
            "karmaConfig": "src/lib/karma.conf.js"
          }
        }
      }
    }
  },
  "defaultProject": "demo-app"
}
